#!/usr/bin/bash

set -e # stop if it fails at any point



if [ -z  "$1" ]; then
echo "No Table argument supplied e.g ./bin/ddb/drop cruddur-messages prod"
  
exit 1

fi
  
TABLE_NAME=$1


if [ "$2" = "prod" ]; then
  ENDPOINT_URL=""
else
  ENDPOINT_URL="--endpoint-url=http://localhost:8000"
fi

aws dynamodb delete-table $ENDPOINT_URL --table-name $TABLE_NAME


